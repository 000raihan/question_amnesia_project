          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-7 col-lg-5">
            <div class="wrap" style="padding: 1rem">
              <div
                class="img"
                style="
                  background-image: url(images/exium_mups.svg);
                  height: 100px !important;
                  object-fit: contain !important;
                  width: auto !important;
                "
              ></div>
              <hr />
              <div class="login-wrap p-4 p-md-4">
                <form id="signInForm" class="signin-form">
                  <div class="form-group mt-3">
                    <input
                      id="full_name"
                      placeholder="Full Name"
                      type="text"
                      class="form-control"
                      required
                    />
                    <!-- <label class="form-control-placeholder" for="username"
                      >Full Name</label
                    > -->
                  </div>
                  <div class="form-group mt-3">
                    <input
                      id="mobile_number"
                      placeholder="Phone Number"
                      type="number"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group mt-3">
                    <input
                      id="code"
                      placeholder="Territory code"
                      type="number"
                      class="form-control"
                      required
                    />
                  </div>

                  <div class="form-group">
                    <button
                      onclick="submitForm(event)"
                      type="submit"
                      class="form-control btn btn-primary rounded submit px-3"
                    >
                      Sign Up
                    </button>
                  </div>
                </form>
                <p class="text-center">
                  Already have an account? <a href="/login"> Login</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

