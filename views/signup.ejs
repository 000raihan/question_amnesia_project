        var code = $("#code").val();

        const data = { full_name, mobile_number, code };

        console.log(" data is : ", data);

        fetch("/api/register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
